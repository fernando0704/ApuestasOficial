@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Inicia Sesion";
    }

<div class="text-center">
   
    <h1 style="color:white"><b>Ingresa a Apuestas Maradonianas</b></h1>

</div>

    <hr />

    <div class="row">
        <div class="col-lg-offset-4 col-md-4">
            <form method="post" asp-action="Login">
                <div class="text-danger">
                    @ViewBag.Error
                </div>
                <div class="form-group">
                    <label laber-for="username" class="control-label"style="color:white">Usuario:</label>
                    <input name="username" class="form-control" type="text" value="@ViewBag.Username" />
                </div>
                <div class="form-group">
                    <label label-for="Password" class="control-label"style="color:white">Contraseña:</label>
                    <input name="password" class="form-control" type="password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" />
                    <label style="color:white">No tienes una cuenta creada, puedes crear una...</label>
                    <a asp-action="Create" asp-controller="Jugadores" class="btn btn-success">Registrarse</a>
</div>
            </form>
</div>
</div>
