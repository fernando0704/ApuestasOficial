@*//@model Apuestas.Controllers.JugadoresController*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apuestas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="https://www.nicepng.com/png/detail/120-1200789_dibujo-pelota-png-fs-la-massana.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Apuestas</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                        <li class="nav-item">
                            <p class="nav-link text-dark">Saldo: </p>  <p class="nav-link text-dark" id="saldo"></p>
                        </li>
                            
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <button type="button" id="btnSaldo" name="btnSaldo" class="btn btn-outline-success">
                Mostrar Saldo
            </button>
            <form method="post" asp-action="RecorrerLista">
                <button asp-action="RecorrerLista" asp-controller="Historiales" type="submit" class="btn btn-outline-success" style="display: inline">Intentar Cobrar</button>
            </form>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Apuestas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <style>
        body {
            background-image: url(https://images.alphacoders.com/923/923986.jpg);
            
        }

        h1 {
            color: white;
        }
    </style>

    <script>
        $(document).ready(function () {

            $('#btnSaldo').click(function () {
                //alert('hola');

                $.ajax({
                    url: "/jugadores/MostrarSaldo",
                    method : "get",
                    success: function (response) {
                        //$('#render').append(response);
                        //alert('llego');
                        //console.log(response);
                        $("#saldo").html(response);
                    }
                });
            });

        });
    </script>
</body>
</html>


